#!/bin/bash

# Define the input JSON file
JSON_FILE="data.json"

# Check if the JSON file exists
if [ ! -f "$JSON_FILE" ]; then
    echo "Error: $JSON_FILE does not exist. Please run the API request task first."
    exit 1
fi

# Extract data using jq
name=$(jq -r '.name' "$JSON_FILE")
height=$(jq -r '.height' "$JSON_FILE")
weight=$(jq -r '.weight' "$JSON_FILE")
type=$(jq -r '.types[0].type.name' "$JSON_FILE")

# Convert height and weight to human-readable formats
formatted_height=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')  # Convert decimeters to meters
formatted_weight=$(awk -v w="$weight" 'BEGIN { printf "%.0f", w / 10 }')  # Convert hectograms to kilograms

# Format the output as required
output="$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

# Display the result
echo "$output"
